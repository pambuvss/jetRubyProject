<%= render 'welcome/menu' %>
<div class="container ">

    <h2 class = "align-top5">Hotel's list</h2>
    <div class="test-flex">
        <% @hotels.each do |hotel| %>
          <div class = "hotel">
          <div class = "fix-text" style="margin-left: 60%;">
              <h2><%= link_to hotel.name, hotel_path(hotel) %></h2>
              <h3>Stars: <%= hotel.star %></h3>
              <h3>Breakf: <%= hotel.breakf %></h3>
              <h3>Description:</h3>
              <div class="prokrutka">
                 <%= hotel.descr %>
              </div>
              <h3>Adress: <%= hotel.addr1 + ', ' +hotel.addr2 + ', '+hotel.addr3 + ', ' + hotel.addr4 %></h3>
              <h3>Price: <%= hotel.price %></h3>
              <h3>User rate: <%= hotel.rate %></h3>
              <p><%= link_to 'Show', hotel_path(hotel) %></p>
            </div>
              
            <%= image_tag hotel.photo_url().to_s, :class => "style_image"%>
          </div>
        <% end %>
        </div>
    <%= will_paginate @hotels , previous_label: '-', next_label: '+', inner_window:1, outer_window: 0%>
</div>

<%= render 'welcome/footer' %>
