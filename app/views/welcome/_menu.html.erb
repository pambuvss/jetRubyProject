<body>

  <div class="container">
    <header class="main">
    
      <nav>
                <a href="#"><%= image_tag("HH0.png", :id=> 'logo', :alt => "Logo") %></a>
        <ul>
          <li><%= link_to 'Main', welcome_index_url %></li>
