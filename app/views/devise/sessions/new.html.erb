<%= render 'welcome/menu' %>
<div class="container">
  <div class="clearfix" id="sign-in">
    <h2 class="align-top5">Log in</h2>
    <div class="form-border">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :id=>"user_email_1" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :id=>"user_password_1" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div>
        <%= f.submit "Log in", :class=> "dis-but-grey", :disabled => true %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    
  </div>
</div>
<%= render 'welcome/footer' %>
